<%= simple_form_for(@order_line) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :order_id %>
    <%= f.input :status %>
    <%= f.input :item_id %>
    <%= f.input :note %>
    <%= f.input :price_in_cents %>
    <%= f.input :qty %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
