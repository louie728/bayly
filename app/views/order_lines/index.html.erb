<h1>Listing order_lines</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Status</th>
      <th>Item</th>
      <th>Note</th>
      <th>Price in cents</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_lines.each do |order_line| %>
      <tr>
        <td><%= order_line.order_id %></td>
        <td><%= order_line.status %></td>
        <td><%= order_line.item_id %></td>
        <td><%= order_line.note %></td>
        <td><%= order_line.price_in_cents %></td>
        <td><%= order_line.qty %></td>
        <td><%= link_to 'Show', order_line %></td>
        <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
        <td><%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

